.near_pok{
  display: flex;
  width: 200rpx;
  height: 200rpx;
  justify-content: center;
  padding-top: 20rpx;
}
.type{
  display:flex;
  background-color: #fff;
  justify-content: center;
  margin-top: 10rpx;
}
.type1,.type2{
  width: 64rpx;
  height: 28rpx;
}
.type2{
  margin-left: 10rpx;
}
.ball_img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.pok_idx_img{
  width: 200rpx;
  height: 140rpx;
}
.pok_idx{
  display:flex;
  position: fixed;
  left: 10rpx;
  bottom: 0rpx;
  padding: 20rpx;
}
.ball{
  display:flex;
  position: fixed;
  right: -30rpx;
  bottom: -18rpx;
  padding: 20rpx;
}
.pok_name{
  display: block;
  padding-top: 100rpx;
  font-weight: 700;
}
.my_pok{
  width: 126rpx;
  height: 126rpx;
  text-align: center;
}
.my_pok_list{
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 180rpx;
  background-color: #fff;
  overflow-x:auto;
  overflow-y: hidden;
}
.s_1{
  display: block;
}
.td{float:left;width:100rpx;height: 50rpx;background-color: #fff;text-align: center;line-height: 50rpx;font-size:20rpx;}
.table{border: 1px solid #F0F0F0;border-radius: 10rpx;}
.g_t-tit{display: block ;color:#000;font-size: 22rpx;padding-left:30rpx;width:400rpx;margin-top:10rpx;}
.th{background-color: pink;}
.g_jdt{width: 400rpx;height: 15rpx;border-radius: 15rpx;background-color: #2F4F4F;position: relative;}
.g_jdt02{background-color: #00FF00;position:absolute;left: 0;top: 0;height: 15rpx;border-radius: 15rpx;}
.g_pname02{font-size: 20rpx;font-weight: 1000;font-style: oblique;color: #708090}
.g_pname03{font-size: 20rpx;font-weight: 2000;margin-left: 10rpx}

.prop{
  width: 100rpx;
  height: 100rpx;
  margin-left: 20%;
