/* pages/home/home.wxss */
.trainer {
  background-color: #F0F0F0;
  padding: 30rpx;
  width: 100%;
  box-sizing:border-box;
  position: fixed;
  bottom: 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
  display: block;
  width: 128rpx;
  text-align: center;
}

.near_pok{
  display: flex;
  width: 200rpx;
  height: 200rpx;
  justify-content: center;
  padding-top: 20rpx;
}
.type{
  display:flex;
  background-color: #fff;
  justify-content: center;
  margin-top: 10rpx;
}
.type1,.type2{
  width: 64rpx;
  height: 28rpx;
}
.type2{
  margin-left: 10rpx;
}
.ball_img{
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
}
.ball{
  display:flex;
  position: fixed;
  right: -30rpx;
  bottom: 0;
  padding: 30rpx;
}
.pok_name{
  display: block;
  padding-top: 100rpx;
}
.my_pok{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
}
.my_pok_list{
  width: 100%;
  height: 170rpx;
  position: fixed;
  bottom: 300rpx;
  background-color: #fff;
  overflow-x:auto;
  overflow-y: hidden;
}
.s_1{
  display: block;
}