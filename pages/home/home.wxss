  margin-top: 7rpx;
}
.prop_count{
  width: 102rpx;
  font-size: 25rpx;
  line-height: 28rpx;
  display: inline-block;
  margin-left: 5%;
  margin-top: 0rpx;
}
.props{
  position: fixed;
  bottom: 330rpx;
  width: 100%;
  height: 160rpx;
  background-color: #FFEFDB;
  overflow-x:auto;
  overflow-y: hidden;
}
.g_props{width: 150rpx;float:left;text-align: center;}
