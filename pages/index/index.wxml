<!--index.wxml-->
<view class="container">
  <view class="bgm_btn">
    <image class="bgm_img" bindtap="bgm" src="/assets/images/head/101.png"></image>
  </view>
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindmy" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view catchtap="click_start" class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
