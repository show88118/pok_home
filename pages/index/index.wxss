/**index.wxss**/
page{
  background-image: url("https://i.pinimg.com/originals/34/1b/0f/341b0f0b1fee9d3f2be531a54db0c6f3.jpg");
  background-repeat: repeat-y;
}
.container{
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  position: fixed;bottom: 100rpx;
  font-size: 50rpx;
  border-radius: 100rpx;
  background-color: #EEE685;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}